# For advice on how to change settings please see
# http://dev.mysql.com/doc/refman/5.6/en/server-configuration-defaults.html
# *** DO NOT EDIT THIS FILE. It's a template which will be copied to the
# *** default location during install, and will be replaced if you
# *** upgrade to a newer version of MySQL.

[client]
default-character-set=utf8

[mysqld]
user=mysql
port = 3306
default-storage-engine=INNODB
character-set-server=utf8
collation-server=utf8_general_ci
basedir=/usr/local/mysql
socket = /usr/local/mysql/log/mysql.sock
max_connections = 10000
log-error = /usr/local/mysql/log/mysql.err
slow_query_log_file = /usr/local/mysql/log/mysql-slow.log
slow_query_log=TRUE
log_queries_not_using_indexes=1
#log-slow-queries = /usr/local/mysql/data/mysql-slow.log
#log-bin=/usr/local/mysql/log/mysql-bin.log
#expire-logs-days = 10
datadir = /usr/local/mysql/data
lc-messages-dir = /usr/share/mysql/english/
lower_case_table_names=1
#log_slow_queries = ON
#log=/usr/local/mysql/data/mysql.log

#general_log=ON
#general_log_file=/usr/local/mysql/log/bogon.log
pid-file=/var/run/mysqld/mysqld.pid
#5.7
autocommit = 1
max_connections = 8000
join_buffer_size = 128M
tmp_table_size = 64M
max_allowed_packet = 640M
read_buffer_size = 16M
read_rnd_buffer_size = 8M
sort_buffer_size = 8M
innodb_buffer_pool_size = 8G
innodb_buffer_pool_load_at_startup = 1
innodb_buffer_pool_dump_at_shutdown = 1
innodb_lru_scan_depth = 2000
innodb_io_capacity = 4000
innodb_io_capacity_max = 8000
innodb_log_file_size = 1G
innodb_log_buffer_size = 64M
innodb_purge_threads = 1
innodb_large_prefix = 1
innodb_thread_concurrency = 8
innodb_print_all_deadlocks = 1
innodb_sort_buffer_size = 16M
innodb_purge_rseg_truncate_frequency = 128
log_timestamps=system
wait_timeout=2880000
interactive_timeout = 2880000
innodb_flush_method=O_DIRECT
secure_file_priv='/tmp'
sql_mode=NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES 
